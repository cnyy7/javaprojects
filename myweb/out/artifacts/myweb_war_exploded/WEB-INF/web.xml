<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginAction</servlet-name>
        <servlet-class>action.login.loginAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAction</servlet-name>
        <url-pattern>/login/toLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserListAction</servlet-name>
        <servlet-class>user.userListAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListAction</servlet-name>
        <url-pattern>/user/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserSaveAction</servlet-name>
        <servlet-class>user.userSaveAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSaveAction</servlet-name>
        <url-pattern>/user/save</url-pattern>
    </servlet-mapping>
</web-app>